<%# index.ejs %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/hero-section.css">
</head>
<body>

    <%- include('partials/header', { title: 'Discover Indian Culture' }) %>

    <section class="hero-section">
        <div class="hero-content">
            <h2>Namaste India</h2>
            <p>Discover the beauty and heritage of India with us.</p>
        </div>
    </section>

    <section class="vertical-gradient-section">
        <div class="content">
            <h2>Explore Indian Culture</h2>
            <p>Experience the rich heritage, traditions, and diversity of India through its art, festivals, and cuisines.</p>
            
            <div class="button-group">
                <a href="/explore" class="img-btn">
                    <img src="/images/Butter-Chicken.jpg" alt="Cuisines">
                    <span class="btn-text">Cuisines</span>
                </a>
                <a href="/places" class="img-btn">
                    <img src="/images/tfht1.jpg" alt="Places">
                    <span class="btn-text">Places</span>
                </a>
                <a href="/culture" class="img-btn">
                    <img src="/images/theyyam.jpg" alt="Culture">
                    <span class="btn-text">Culture</span>
                </a>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

</body>
</html>
